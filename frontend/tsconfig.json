{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    "resolveJsonModule": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
